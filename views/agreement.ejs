<% layout('layout') %>

<div class="row">
  <div class="col-lg-6">
    <h1><%= title %></h1>
  </div>
</div>

<form method="post" action="/agreement">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <label>Token: </label>
        <input type="text" name="token" value="" size="64" placeholder="EC-XXXXXXXXXXXXXXXXX">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info btn-lg">Create a Billing Agreement</button>
      </div>
    </div>
  </div>
</form>

<div class="row">
  <div class="col-lg-6">
    <% if (JSON.stringify(error) !== '{}') { %>
      <label>API call Failed</label>
      <pre class="bg-danger"><code><%= error.message %></code></pre>
    <% } %>

    <% if (JSON.stringify(data) !== '{}') { %>
      <label>API call succeeded</label>
      <pre class="bg-success"><code><%= data.message %></code></pre>
    <% } %>
  </div>
</div>

